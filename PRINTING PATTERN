include <stdio.h>
int main() {
    int n, i, j;
    printf("Enter the height of the V: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        for(j = 0; j < 2 * n; j++) {
            if(j == i || j == 2 * n - i - 1)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }

    return 0;
}
